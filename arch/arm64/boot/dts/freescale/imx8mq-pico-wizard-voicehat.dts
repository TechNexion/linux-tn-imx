&sound_wm8960 {
	status = "disabled";
};

&pwm2 {
	status = "disabled";
};

&pwm3 {
	status = "disabled";
};

&ecspi1 {
	status = "disabled";
};

/* CSI_nRST pin conflicts with KEY_NEXT button */
&ov5645_mipi2 {
	status = "disabled";
};
